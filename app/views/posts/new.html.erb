<div class="create-post-c">
    <h2 class ="post-create-header">Create a post</h2>
    <%= form_with model: @post, url: user_posts_path, scope: :post, html: {class: "post-form-c"} do |form| %>
        <div class="post-title-c">            
            <%= form.text_field :title, placeholder: "Title", required: true %>
        </div>
        <div class="post-text-c">
            <%= form.text_area :text, placeholder: "Type here...", rows: 20, required: true %>
        </div>
        <%= form.submit "Post", class: "submit-btn" %>
    <% end %> 
</div>